{
   "datareader": {
      "datapath": ".",
      "maxim": -1
   },

   "classifier":{
	  "type": "cnn",
	  "modeltype" : "config/default128",
      "species": ["Araneae", "Coleoptera", "Diptera Brachycera", "Diptera Nematocera", "Diptera Tipulidae", 
                  "Diptera Trichocera", "Ephemeroptera", "Hemiptera", "Hymenoptera Other", "Hymenoptera Vespidae", 
                  "Lepidoptera Macros", "Lepidoptera Micros", "Neuroptera", "Opiliones", "Trichoptera", "Vegetation"],
      "imagedimension": 128,
	  "threshold_unknown": 60,
	  "unknown_dir": "unknowns",
      "write_unknown" : false,
      "boundingboxpadding": 100
   },

   "blobdetector":{
      "type": "adaptive",
      "adapthres": false,
      "adaptive": {
         "medianblur": 5,
         "adapsize": 801,
         "adapconst": 8,
         "kernel": 20
      },
      "simple": {
         "kernel": 7,
         "thresh": 192
      },
    	"otsu": {
    	   "blur_kernel": 3,
    	   "blur": 7,
    	   "morph_kernel": 11
      }, 
      "custom": {
         "kernel": 7,
         "thresh": 5
      },           
      "minarea": 12000,
      "maxarea": 250000,
      "backgroundpath": "./sample_background.jpg"
   },

   "imagemod":{
   },

   "tracker":{
      "distance_cost_weight": 2.5,
      "area_cost_weight": 0.7,
      "cosine_cost_weight": 1.5,
      "cost_threshold": 0.7,
	  "maxage": 5,
	  "_comment": 50,
	  "maxtimesec": 30 
   },

   "moviemaker":{
      "maxframes": -1,
      "maximages": -1,
      "resultdir": "./tracks",
      "writeimages": false,
      "writemovie": false,
      "moviesize": false,
      "fps":5
   },
   
   "stats":{
     "mincounts": 1
   }
}
